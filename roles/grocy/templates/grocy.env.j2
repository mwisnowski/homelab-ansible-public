# Grocy Environment Configuration
GROCY_CULTURE={{ grocy_culture }}
GROCY_CURRENCY={{ grocy_currency }}
GROCY_CALENDAR_FIRST_DAY_OF_WEEK={{ grocy_calendar_first_day_of_week }}
GROCY_AUTH_CLASS={{ grocy_auth_class }}

# Feature flags
{% for feature, enabled in grocy_feature_flags.items() %}
{{ feature }}={{ enabled | lower }}
{% endfor %}

# Security
GROCY_SESSION_COOKIE_SECURE={{ grocy_session_cookie_secure | lower }}
GROCY_SESSION_COOKIE_HTTPONLY={{ grocy_session_cookie_httponly | lower }}
GROCY_SESSION_COOKIE_SAMESITE={{ grocy_session_cookie_samesite }}