services:
  grafana:
    image: grafana/grafana:{{ grafana_version }}
    container_name: grafana
    environment:
      - GF_SECURITY_ADMIN_USER={{ grafana_admin_user }}
      - GF_SECURITY_ADMIN_PASSWORD={{ grafana_admin_password }}
      - GF_USERS_ALLOW_SIGN_UP={{ grafana_allow_sign_up | lower }}
{% if grafana_install_plugins | length > 0 %}
      - GF_INSTALL_PLUGINS={{ grafana_install_plugins | join(',') }}
{% endif %}
    volumes:
      - ./data:/var/lib/grafana
      - ./config/grafana.ini:/etc/grafana/grafana.ini:ro
      - ./provisioning:/etc/grafana/provisioning:ro
    ports:
      - "{{ grafana_port }}:3000"
{% if grafana_enable_reverse_proxy %}
    networks:
      - {{ grafana_network_name }}
      - web-services
{% else %}
    networks:
      - {{ grafana_network_name }}
{% endif %}
    restart: unless-stopped
    user: "{{ grafana_user_id }}:{{ grafana_group_id }}"

{% if grafana_enable_reverse_proxy %}
networks:
  {{ grafana_network_name }}:
    external: true
  web-services:
    external: true
{% else %}
networks:
  {{ grafana_network_name }}:
    external: true
{% endif %}